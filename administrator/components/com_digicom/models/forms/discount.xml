<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields addfieldpath="/administrator/components/com_digicom/models/fields">
	
		<field name="id"  type="hidden" />
		<field name="title"  type="text" label="JGLOBAL_TITLE" class="control-label" description="COM_DIGICOM_DICOUNT_TITLE_DESC" />

		<field name="code"  type="text" label="COM_DIGICOM_DISCOUNT_CODE" description="COM_DIGICOM_DISCOUNT_CODE_DESC" />
		
		<field name="codelimit"  type="number" label="COM_DIGICOM_DISCOUNT_CODE_USAGE_LIMIT" description="COM_DIGICOM_DISCOUNT_CODE_USAGE_LIMIT_DESC" />
		
		<field name="amount"  type="number" min="0"  class="input-small" label="COM_DIGICOM_DISCOUNT_AMOUNT" description="COM_DIGICOM_DISCOUNT_AMOUNT_DESC" />
		
		<field id="promotype" name="promotype" type="radio" class="btn-group" size="1" default="1" >
			<option value="1"> COM_DIGICOM_DISCOUNT_TYPE_PERCENTAGE</option>
			<option value="0"> COM_DIGICOM_DISCOUNT_TYPE_FIXED</option>
		</field>

		<field name="codestart" type="calendar" label="COM_DIGICOM_DISCOUNT_CODE_START_PUBLISHIING" description="COM_DIGICOM_DISCOUNT_CODE_START_PUBLISHIING_DESC" />
		
		<field name="codeend" type="calendar" label="COM_DIGICOM_DISCOUNT_CODE_END_PUBLISHIING" description="COM_DIGICOM_DISCOUNT_CODE_END_PUBLISHIING_DESC" />

		<field name="forexisting" type="hidden" />

		<field name="aftertax" type="hidden" />
		
		<field id="discount_enable_range" name="discount_enable_range" type="radio" class="btn-group" size="1" default="1" >
			<option value="1"> JYES</option>
			<option value="0"> JNO</option>
		</field>

		<field name="used" type="hidden" />

		<field name="validfornew" type="checkbox" value="1" default="0" />
		<field name="validforrenewal" type="checkbox" value="1" default="0" />

		<field name="products" type="hidden" />
		
		<field name="ordering" type="hidden" />
		<field name="checked_out" type="hidden" />
		<field name="checked_out" type="hidden" />
		<field name="checked_out_time" type="hidden" />
		
		<field id="published" name="published" type="radio" label="JSTATUS" description="COM_DIGICOM_DISCOUNT_CODE_STATUS_DESC" class="btn-group" size="1" default="1" >
			<option value="1"> JPUBLISHED</option>
			<option value="0"> JUNPUBLISHED</option>
		</field>
		
	</fields>
	
</form>