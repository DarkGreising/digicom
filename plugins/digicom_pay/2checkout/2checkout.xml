<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="digicom_pay" method="upgrade">
	<name>Payment - 2Checkout</name>
	<author>ThemeXpert</author>
	<creationDate>2015-06-05</creationDate>
	<copyright>Copyright Â© 2013 themexpert.com. All rights reserved.</copyright>
	<license>GNU/GPLv3</license>
	<authorEmail>info@themexpert.com</authorEmail>
	<authorUrl>www.themexpert.com</authorUrl>
	<version>1.0.0-beta.4</version>
	<description>2Checkout payment plugin for DigiCom Joomla Extension</description>

	<files>
		<filename plugin="2checkout">2checkout.php</filename>
		<folder>2checkout</folder>
	</files>
	<languages >
		<language tag="en-GB">en-GB/en-GB.plg_digicom_pay_2checkout.ini</language>
	</languages>				  
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="sid" type="text" size="50" default=""
					label="PLG_DIGICOM_PAY_2CHECKOUT_SID_LABEL"
					description="PLG_DIGICOM_PAY_2CHECKOUT_SID_DESC"/>
				<field name="secret" type="text" size="50" default=""
					label="PLG_DIGICOM_PAY_2CHECKOUT_SECRET_LABEL"
					description="PLG_DIGICOM_PAY_2CHECKOUT_SECRET_DESC"/>
				<field name="demo" type="radio" default="0" class="btn-group"
					label="PLG_DIGICOM_PAY_2CHECKOUT_DEMO_LABEL"
					description="PLG_DIGICOM_PAY_2CHECKOUT_DEMO_DESC">
				  <option value="0">JNO</option>
				  <option value="1">JYES</option>
				</field>
				<field type="spacer" />
				<field name="lang" type="list" default="en"
					label="PLG_DIGICOM_PAY_2CHECKOUT_LANG_LABEL"
					description="PLG_DIGICOM_PAY_2CHECKOUT_LANG_DESC">
				  <option value="en">PLG_DIGICOM_PAY_2CHECKOUT_LANG_EN</option>
				  <option value="zh">PLG_DIGICOM_PAY_2CHECKOUT_LANG_ZH</option>
				  <option value="da">PLG_DIGICOM_PAY_2CHECKOUT_LANG_DA</option>
				  <option value="nl">PLG_DIGICOM_PAY_2CHECKOUT_LANG_NL</option>
				  <option value="fr">PLG_DIGICOM_PAY_2CHECKOUT_LANG_FR</option>
				  <option value="gr">PLG_DIGICOM_PAY_2CHECKOUT_LANG_GR</option>
				  <option value="el">PLG_DIGICOM_PAY_2CHECKOUT_LANG_EL</option>
				  <option value="it">PLG_DIGICOM_PAY_2CHECKOUT_LANG_IT</option>
				  <option value="jp">PLG_DIGICOM_PAY_2CHECKOUT_LANG_JP</option>
				  <option value="no">PLG_DIGICOM_PAY_2CHECKOUT_LANG_NO</option>
				  <option value="pt">PLG_DIGICOM_PAY_2CHECKOUT_LANG_PT</option>
				  <option value="sl">PLG_DIGICOM_PAY_2CHECKOUT_LANG_SL</option>
				  <option value="es_ib">PLG_DIGICOM_PAY_2CHECKOUT_LANG_ES_IB</option>
				  <option value="es_la">PLG_DIGICOM_PAY_2CHECKOUT_LANG_ES_LA</option>
				  <option value="sv">PLG_DIGICOM_PAY_2CHECKOUT_LANG_SV</option>
				</field>
				<field name="pay_method" type="radio" default="cc" class="btn-group"
					label="PLG_DIGICOM_PAY_2CHECKOUT_PAY_METHOD_LABEL"
					description="PLG_DIGICOM_PAY_2CHECKOUT_PAY_METHOD_DESC">
				  <option value="cc">PLG_DIGICOM_PAY_2CHECKOUT_PAY_METHOD_CC</option>
				  <option value="al">PLG_DIGICOM_PAY_2CHECKOUT_PAY_METHOD_AL</option>
				  <option value="ppi">PLG_DIGICOM_PAY_2CHECKOUT_PAY_METHOD_PPI</option>
				</field>
				<field name="plugin_name" type="text" default="2Checkout" label="PLG_NAME" description="" />
				<field name="plugin_hidname" type="hidden" default="2checkout" />
			</fieldset>
		</fields>
	</config>
</extension>