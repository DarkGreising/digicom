<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_digicom</name>
	<author>Themexpert</author>
	<creationDate>March 2015</creationDate>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@themexpert.com</authorEmail>
	<authorUrl>www.themexpert.org</authorUrl>
	<version>1.0.0</version>
	<description>PLG_SEARCH_DIGICOM_XML_DESCRIPTION</description>
	<files>
		<filename plugin="digicom">digicom.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_search_digicom.ini</language>
		<language tag="en-GB">en-GB.plg_search_digicom.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="PLG_SEARCH_DIGICOM_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_DIGICOM_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_content" type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					description="PLG_SEARCH_DIGICOM_FIELD_CONTENT_DESC"
					label="PLG_SEARCH_DIGICOM_FIELD_CONTENT_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
				<!--
				<field name="search_archived" type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					description="PLG_SEARCH_DIGICOM_FIELD_ARCHIVED_DESC"
					label="PLG_SEARCH_DIGICOM_FIELD_ARCHIVED_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
				-->
			</fieldset>

		</fields>
	</config>
</extension>
