<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>DigiCom Shopping Cart</name>
	<author>themexpert.com</author>
	<creationDate>Oct 2013</creationDate>
	<copyright>Copyright (C) 2013 themexpert.com</copyright>
	<license>GNU/GPLv3</license>
	<authorEmail>info@themexpert.com</authorEmail>
	<authorUrl>www.themexpert.com</authorUrl>
	<version>3.1.3b</version>
	<description>DigiCom shoping cart</description>
	<files>
		<filename module="mod_digicom_cart">mod_digicom_cart.xml</filename>
		<filename module="mod_digicom_cart">mod_digicom_cart.php</filename>
		<folder>tmpl</folder>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
			<language tag="en-GB">en-GB.mod_digicom_cart.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">
				
				<field name="digicom_category" type="category" 
					label="COM_DIGICOM_DEFAULT_CATEGORY_LABEL"
					extension="com_digicom"
					show_root="true"
					required="true"
					description="COM_DIGICOM_DEFAULT_CATEGORY_DESC"/>

				<field name="modbuynow" type="list" default="0" label="BUTTON" description="">
					<option value="2">NOTHING</option>
					<option value="1">TEXT</option>
					<option value="0">IMAGE</option>
				</field>
				
			</fieldset>
		</fields>
	</config>
</extension>
